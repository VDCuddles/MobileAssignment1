<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aquila.mobileassignment1.MapActivity">

    <Button
        android:id="@+id/mapButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 1"
        android:onClick="setPage1"
        android:layout_above="@+id/mapButton2"
        android:layout_alignLeft="@+id/mapButton2"
        android:layout_alignStart="@+id/mapButton2" />

    <Button
        android:id="@+id/mapButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 2"
        android:onClick="setPage2"
        android:layout_above="@+id/mapButton3"
        android:layout_alignLeft="@+id/mapButton3"
        android:layout_alignStart="@+id/mapButton3" />

    <Button
        android:id="@+id/mapButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 3"
        android:onClick="setPage3"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/albmap1"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
